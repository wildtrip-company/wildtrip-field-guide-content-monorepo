---
import type { PublicDetailSpecie } from '../../lib/repositories/SpeciesRepository'

interface Props {
  species: PublicDetailSpecie
}

const { species } = Astro.props

// Parse distribution if it's a JSON string or object
let distributionText = ''
if (species.distribution) {
  if (typeof species.distribution === 'string') {
    distributionText = species.distribution
  } else if (typeof species.distribution === 'object') {
    // If it's a GeoJSON or other object, try to extract meaningful text
    distributionText = JSON.stringify(species.distribution)
  }
}
---

{
  (species.habitat || distributionText) && (
    <section class="mb-6">
      <h2 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">Hábitat y Distribución</h2>
      <div class="rounded-lg border border-gray-200 bg-gray-50 p-4 dark:border-gray-700 dark:bg-gray-800/50">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
          {species.habitat && (
            <div>
              <h3 class="mb-3 text-sm font-semibold tracking-wider text-gray-600 uppercase dark:text-gray-400">
                Hábitat
              </h3>
              <p class="text-sm leading-relaxed text-gray-700 dark:text-gray-300">{species.habitat}</p>
            </div>
          )}
          {distributionText && (
            <div>
              <h3 class="mb-3 text-sm font-semibold tracking-wider text-gray-600 uppercase dark:text-gray-400">
                Distribución Geográfica
              </h3>
              <p class="text-sm leading-relaxed text-gray-700 dark:text-gray-300">{distributionText}</p>
            </div>
          )}
        </div>
      </div>
    </section>
  )
}
